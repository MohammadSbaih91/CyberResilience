
@using CyberResilience.Common
@using CyberResilience.Common.App_LocalResources;
@using CyberResilience.UIHelper.PagedList
@model IEnumerable<CyberResilience.Models.FreeServicesViewModel.QuickOnlineAssessmentResultViewModel>


@{
    Layout = null;
}

@if (Model == null || !Model.Any())
{
    <div class="text-center">
        @Resource.NoData
    </div>
    return;
}

@{
    var pagedListModel = (IPagedListModel)Model;
    pagedListModel.ItemId = Guid.NewGuid().ToString();
}
@using (Html.BeginForm("Index", "Platform", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div id="@pagedListModel.ItemId" role="treegrid" class="searchRequests cchi-grid">
        <section class="login_wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="login">
                            <h2>@Resource.ComplianceAssessmentResult</h2>
                            @*<p class="login_subtext">@Resource.Employees</p>*@
                            <div class="login_form">
                                <form>
                                    <section class="data_table_section">
                                        <div class="container">
                                            <div class="row">
                                                <div class="data_table_container" style="min-width:1024px;">
                                                    <table id="example2" class="table table-bordered table-hover table-striped">
                                                        <tr>
                                                            <th>
                                                                @Resource.QuestionnaireComplianceResult
                                                            </th>
                                                            <th>
                                                                @Resource.ImplementationPeriodAccurateExpectedTime
                                                            </th>
                                                            <th>
                                                                @Resource.ImplementationPeriodTime
                                                            </th>
                                                            <th>
                                                                @Resource.QuestionnaireAccurateComplianceResult
                                                            </th>
                                                            <th>
                                                                @Resource.QuestionnaireComplianceResult
                                                            </th>
                                                            <th>
                                                                @Resource.CreatedDate
                                                            </th>
                                                            <th>
                                                            </th>
                                                        </tr>
                                                        @if (Model != null)
                                                        {
                                                            <tbody>
                                                                @foreach (var item in Model)
                                                                {
                                                                    <tr>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.QuestionnaireComplianceResult)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.ImplementationPeriodAccurateExpectedTime)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.ImplementationPeriodTime)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.QuestionnaireAccurateComplianceResult)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.QuestionnaireComplianceResult)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => item.CreatedDate)
                                                                        </td>
                                                                        <td>
                                                                            @Html.ActionLink(@Resource.Details, "QuickOnlineAssessmentResult", "FreeServices", new { ServiceRequestId = item.ServiceRequestId.Value })
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        }
                                                        else
                                                        {
                                                            <tr>@Resource.NoData</tr>
                                                        }
                                                    </table>
                                                    @Html.Partial("~/Views/Shared/_PaginationPost.cshtml", pagedListModel)
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

}


