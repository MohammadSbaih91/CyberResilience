@model IEnumerable<CyberResilience.Area.Admin.Models.AttachmentViewModel>
@using CyberResilience.Common
@using CyberResilience.Common.App_LocalResources;

@{
    ViewBag.Title = "Register";
    Layout = null;
}

<div id="tbl" class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="login">
            <h2>@Resource.TemplateAttachments</h2>
            <p class="login_subtext">@Resource.TemplateAttachments</p>
            <div class="login_form">
                <form>
                    <section class="data_table_section">
                        <div class="container">
                            <div class="row">
                                <div class="data_table_container">
                                    <table id="example2" class="table table-bordered table-hover table-striped">
                                        <tr>
                                            <th>
                                                @Resource.AttachmentName
                                            </th>
                                            <th>
                                                @Resource.DeleteAttachments
                                            </th>
                                        </tr>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <a href="@item.ToString()">@item.FileName</a>
                                                    </td>
                                                    <td>
                                                        <a href="@item.ToDelete()">@Resource.DeleteAttachments</a>
                                                    </td>
                                                    <td>
                                                        <a href="#" class="qrastn" data-toggle="modal" data-target="#AttachmentModal" data-assigned-id="@item.TemplateId">@Resource.AddTemplateAttachments</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </section>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade login_modal" id="AttachmentModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div id="Attachments"></div>
        </div>
    </div>
</div>



<script>
    $('.qrastn').click(function () {
        debugger;
        var id = $(this).data('assigned-id');
        if (id > 0) {
            var route = '@Url.Action("AddAttachmentPartial", "Questionnaire")?TemplateId=' + id;
            $('#Attachments').load(route);
        }
    });
</script>